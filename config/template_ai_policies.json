{
  "version": "1",
  "default_policy_id": "mock",
  "policies": [
    {
      "id": "mock",
      "name": "Mock Template AI Policy",
      "description": "Static rules for template AI integration tests.",
      "provider": "mock",
      "model": "mock-template",
      "prompt_template": "Classify the layout usage tags using the provided metadata.",
      "static_rules": [
        {
          "layout_name_pattern": ".*Title.*",
          "tags": ["title"]
        },
        {
          "layout_name_pattern": ".*Agenda.*",
          "tags": ["agenda"]
        },
        {
          "layout_name_pattern": ".*executive.*summary.*",
          "tags": ["overview", "content"]
        },
        {
          "layout_name_pattern": null,
          "tags": ["content"]
        }
      ]
    }
  ]
}
